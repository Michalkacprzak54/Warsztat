@model WarsztatMVC.Models.ActivityModel

@{
    ViewData["Title"] = "Edycja czynności";
}

<div class="edit-a-form-full">
    <div class="edit-a-form">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Id_czynnosc" class="control-label"></label>*@
                <input asp-for="Id_czynnosc" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cena_netto" class="control-label">Cena netto</label>
                <input asp-for="Cena_netto" class="form-control" />
                <span asp-validation-for="Cena_netto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Roboczogodziny" class="control-label"></label>
                <input asp-for="Roboczogodziny" class="form-control" />
                <span asp-validation-for="Roboczogodziny" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="button-free">
        <div class="button-back">
            <a asp-action="Index">Powrót</a>
        </div>
    </div>
</div>




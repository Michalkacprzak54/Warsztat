@model WarsztatMVC.Models.WorkerModel

@{
    ViewData["Title"] = "Edycja pracownika";
}

<div class="edit-a-form-full">
    <div class="edit-a-form">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id_pracownik" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="Pracownik_imie" class="control-label"></label>
                <input asp-for="Pracownik_imie" class="form-control" />
                <span asp-validation-for="Pracownik_imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pracownik_nazwisko" class="control-label"></label>
                <input asp-for="Pracownik_nazwisko" class="form-control" />
                <span asp-validation-for="Pracownik_nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pracownik_nr_telefonu" class="control-label"></label>
                <input asp-for="Pracownik_nr_telefonu" class="form-control" />
                <span asp-validation-for="Pracownik_nr_telefonu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pracownik_email" class="control-label">E-mail</label>
                <input asp-for="Pracownik_email" class="form-control" type="email" />
                <span asp-validation-for="Pracownik_email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pracownik_haslo" class="control-label">Hasło</label>
                <input asp-for="Pracownik_haslo" class="form-control" type="password"/>
                <span asp-validation-for="Pracownik_haslo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="button-free">
        <div class="button-back">
            <a asp-action="Index">Powrót</a>
        </div>
    </div>
</div>

